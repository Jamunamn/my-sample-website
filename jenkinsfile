pipeline{
    agent{label "web3cpull"}
    stages{
        stage('clone/pull'){
            steps{
                sh "pwd"
                sh "cd my-sample-website ; git pull https://github.com/pramukhgowda/my-sample-website.git"
            }
        }
        stage("maven"){
            steps{
                sh "pwd"
                sh "cd my-sample-website ; mvn clean install "
            }
        }
        stage("deploy"){
            steps{
                sh "pwd"
                sh "cp /home/ec2-user/workspace/r/my-sample-website/webapp/target/webapp.war /home/ec2-user/apache-tomcat-8.0.15/webapps"
            }
        }
    }
}
